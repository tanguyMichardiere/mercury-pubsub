  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'main'",
      "cargo": {
        "args": ["build", "--bin=main", "--package=server"],
        "filter": {
          "name": "main",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug integration test 'auth'",
      "cargo": {
        "args": ["test", "--no-run", "--test=auth", "--package=server"],
        "filter": {
          "name": "auth",
          "kind": "test"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
