{
  "name": "mercury-pubsub",
  "private": true,
  "description": "Self-deployable Server-Sent Events service with schema validation",
  "author": "Tanguy Michardi√®re",
  "license": "MIT",
  "keywords": [
    "mercury-pubsub",
    "mercury",
    "publisher",
    "subscriber",
    "pusher",
    "websockets"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mercury-pubsub/mercury.git"
  },
  "homepage": "https://github.com/mercury-pubsub/mercury#readme",
  "bugs": {
    "url": "https://github.com/mercury-pubsub/mercury/issues"
  },
  "workspaces": [
    "admin",
    "types",
    "publisher",
    "subscriber",
    "tests",
    "examples/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "format": "turbo run format",
    "check-format": "turbo run check-format",
    "lint": "turbo run lint",
    "build": "turbo run build",
    "test": "turbo run test",
    "prepublish": "turbo run check-format lint test",
    "publish": "lerna publish --no-private"
  },
  "devDependencies": {
    "husky": "8.0.1",
    "lerna": "5.4.3",
    "npm-check-updates": "16.0.6",
    "turbo": "1.4.3"
  }
}
